{
    "name": "A Warm Place",
    // =================================
    "type": "light",
    // =================================
    "semanticHighlighting": false,
    // =================================

    "semanticTokenColors": {
        //
        /* Unused tokens ------------ */
        "decorator": "#000000",
        "modifier": "#000000",
        "regexp": "#000000",
        /* -------------------------- */
        //
        "xmlDocCommentAttributeQuotes": "#226677",
        //
        "extensionMethod": "#0000FF",
        "function": "#0000FF",
        "method": "#0000FF",
        //
        "markupAttributeValue": "#008000",
        "preprocessorText": "#008000",
        "string": "#008000",
        "stringVerbatim": "#008000",
        //
        "constant": "#001080",
        "event": "#001080",
        "field": "#001080",
        "label": "#001080",
        "macro": "#001080",
        "operator": "#001080",
        "punctuation": "#001080",
        "variable": "#001080",
        //
        "comment": "#6A6A6A",
        "xmlDocCommentDelimiter": "#6A6A6A",
        "xmlDocCommentText": "#6A6A6A",
        //
        "class": "#795E26",
        "delegate": "#795E26",
        "enum": "#795E26",
        "interface": "#795E26",
        "markupAttribute": "#795E26",
        "namespace": "#795E26",
        "number": "#795E26",
        "recordClass": "#795E26",
        "recordStruct": "#795E26",
        "struct": "#795E26",
        "type": "#795E26",
        "typeParameter": "#795E26",
        "xmlDocCommentAttributeName": "#795E26",
        //      
        "controlKeyword": "#AF00DB",
        "keyword": "#AF00DB",
        //
        "enumMember": "#DC322F",
        "markupElement": "#DC322F",
        "parameter": "#DC322F",
        "property": "#DC322F",
        "xmlDocCommentName": "#DC322F",
        //
    },

    // =================================
    
    "colors": {
        // === BASE ARMONIZADA ===
        "focusBorder": "#0000FF80",
        "foreground": "#001080",
        "editor.background": "#FAF3E0", // "#F9F0DF",
        "editor.foreground": "#226677",
        "scrollbar.shadow": "#EDE5D8",
        
        // === BARRAS UNIFICADAS (TOP & BOTTOM) ===
        "titleBar.activeBackground": "#f0f0f0",
        "titleBar.activeForeground": "#000000",
        "titleBar.inactiveBackground": "#f0f0f0",
        "titleBar.inactiveForeground": "#666666",
        "titleBar.border": "#e0e0e0",
        
        "statusBar.background": "#f0f0f0",
        "statusBar.foreground": "#000000",
        "statusBar.border": "#e0e0e0",
        "statusBar.noFolderBackground": "#f0f0f0",
        "statusBar.noFolderForeground": "#000000",
        "statusBar.debuggingBackground": "#f0f0f0",
        "statusBar.debuggingForeground": "#000000",
        
        // === ACTIVITY BAR ===
        "activityBar.border": "#EDE5D8",
        "activityBar.background": "#F8F2E5",
        "activityBar.foreground": "#001080",
        "activityBarBadge.background": "#AF00DB",  // ✅ Alineado
        "activityBarBadge.foreground": "#FFFFFF",
        
        // === GRUPOS DE EDITOR ===
        "editorGroup.border": "#EDE5D8",
        "editorGroupHeader.tabsBackground": "#F8F2E5",
        "editorGroupHeader.noTabsBackground": "#F8F2E5",
        "editorGroupHeader.tabsBorder": "#EDE5D8",
        "tab.activeBackground": "#F9F0DF",
        "tab.inactiveBackground": "#F8F2E5",
        "tab.border": "#EDE5D8",
        "tab.activeBorder": "#0000FF",  // ✅ Alineado
        "tab.activeForeground": "#000000",
        "tab.inactiveForeground": "#666666",
        "tab.hoverBackground": "#F8F2E5",
        
        // === BARRA LATERAL ===
        "sideBar.border": "#EDE5D8",
        "sideBar.background": "#F8F2E5",
        "sideBar.foreground": "#001080",
        "sideBarSectionHeader.background": "#F8F2E5",
        "sideBarSectionHeader.foreground": "#001080",
        "sideBarTitle.foreground": "#001080",
        
        // === LISTAS ===
        "list.highlightForeground": "#0000FF",  // ✅ Alineado
        "list.activeSelectionBackground": "#e8e8e8",
        "list.activeSelectionForeground": "#000000",
        "list.inactiveSelectionBackground": "#f0f0f0",
        "list.inactiveSelectionForeground": "#666666",
        "list.hoverBackground": "#F8F2E5",
        "list.hoverForeground": "#000000",
        "list.focusBackground": "#e8e8e8",
        "list.focusForeground": "#000000",
        
        // === EDITOR ===
        "editor.lineHighlightBackground": "#F8F2E5",
        "editor.lineHighlightBorder": "#00000000",
        "editorLineNumber.foreground": "#805500",  // ✅ Alineado
        "editorLineNumber.activeForeground": "#000000",
        "editor.selectionBackground": "#0000FF40",
        "editor.selectionHighlightBackground": "#0000FF20",
        "editor.findMatchBackground": "#0000FF40",
        "editor.findMatchHighlightBackground": "#0000FF20",
        
        // === INPUTS ===
        "input.border": "#D4CBBE",
        "input.background": "#F8F2E5",
        "input.foreground": "#001080",
        "input.placeholderForeground": "#888888",
        "inputOption.activeBorder": "#0000FF",  // ✅ Alineado
        "inputOption.activeForeground": "#000000",
        "dropdown.border": "#D4CBBE",
        "dropdown.background": "#F8F2E5",
        "dropdown.listBackground": "#F8F2E5",
        
        // === NOTIFICACIONES ===
        "notificationCenter.border": "#EDE5D8",
        "notificationCenterHeader.background": "#F8F2E5",
        "notificationToast.border": "#EDE5D8",
        "notifications.background": "#F8F2E5",
        "notifications.border": "#EDE5D8",
        "notificationsInfoIcon.foreground": "#0000FF",  // ✅ Alineado
        "notificationsWarningIcon.foreground": "#805500",  // ✅ Alineado
        "notificationsErrorIcon.foreground": "#DC322F",  // ✅ CORREGIDO (era #D03030)
        
        // === BOTONES ===
        "button.background": "#0000FF",  // ✅ Alineado
        "button.foreground": "#FFFFFF",
        "button.hoverBackground": "#226677",
        "button.border": "#00000000",
        "button.secondaryBackground": "#805500",  // ✅ Alineado
        "button.secondaryForeground": "#FFFFFF",
        "button.secondaryHoverBackground": "#7A4A00",
        
        // === WIDGETS DEL EDITOR ===
        "editorWidget.background": "#F8F2E5",
        "editorWidget.border": "#D4CBBE",
        "editorSuggestWidget.background": "#F8F2E5",
        "editorSuggestWidget.foreground": "#001080",
        "editorSuggestWidget.selectedBackground": "#e8e8e8",
        "editorSuggestWidget.highlightForeground": "#0000FF",  // ✅ Alineado
        "editorHoverWidget.background": "#F8F2E5",
        "editorHoverWidget.foreground": "#001080",
        "editorHoverWidget.border": "#D4CBBE",
        
        // === PANEL ===
        "panel.border": "#EDE5D8",
        "panel.background": "#F8F2E5",
        "panelTitle.activeBorder": "#0000FF",  // ✅ Alineado
        "panelTitle.activeForeground": "#000000",
        "panelTitle.inactiveForeground": "#666666",
        
        // === SCROLLBARS ===
        "scrollbarSlider.background": "#00000020",
        "scrollbarSlider.hoverBackground": "#00000030",
        "scrollbarSlider.activeBackground": "#00000040",
        
        // === MENÚS ===
        "menu.background": "#F8F2E5",
        "menu.foreground": "#001080",
        "menu.selectionBackground": "#e8e8e8",
        "menu.selectionForeground": "#000000",
        "menu.border": "#D4CBBE"
    },

    // =================================

    "tokenColors": [
        {
            "scope": [
                "keyword.operator.relational",
                "keyword.operator.arithmetic",
            ],
            "settings": {
                "fontStyle": "",
            }
        },
        {
            "scope": [
                //"entity.name.tag",
                "entity.name.variable",
                "meta.object-literal",
                "variable.object.property",
                "variable.other.constant",
                "variable.other.readwrite",
                "variable.parameter",
            ],
            "settings": {
                "fontStyle": "italic"
            }
        },
        {
            "scope": [
                "entity.name.function",
                "entity.name.section",
                "keyword.operator.arithmetic",
                "keyword.operator.decrement",
                "keyword.operator.increment",
                "keyword.operator.relational",
                "punctuation.definition.entity",
                "punctuation.definition.group",
                "punctuation.definition.heading",
                "punctuation.definition.interpolation",
                "punctuation.definition.string",
                "punctuation.definition.tag",
                "punctuation.definition.template-expression",
                "support.function",
                "support.type.builtin",
                "support.type.primitive",
                "support.type.python",
            ],
            "settings": {
                "foreground": "#0000FF" // #0066CC
            }
        },
        {
            "scope": [
                "entity.other.inherited-class",
                "string.quoted",
                "string.template",
                "string.unquoted",
            ],
            "settings": {
                "foreground": "#008000" // #207725
            }
        },
        {
            "scope": [
                "constant.other.table-name",
                                "entity.name.tag",
                "entity.name.variable",
                "keyword.operator.assignment",
                "keyword.operator.quantifier",
                "keyword.operator.rest",
                "keyword.operator.spread",
                "keyword.operator.type",
                "meta.attribute",
                "meta.brace",
                "meta.function-call",
                "meta.function.parameters", // Necesario, no tiene mellizo.
                "meta.object-literal",
                "punctuation.accessor",
                "punctuation.curlybrace",
                "punctuation.definition.array",
                "punctuation.definition.block",
                "punctuation.definition.dictionary",
                "punctuation.definition.inheritance",
                "punctuation.definition.parameters",
                "punctuation.definition.typeparameters",
                "punctuation.parenthesis",
                "punctuation.section",
                "punctuation.separator",
                "punctuation.squarebracket",
                "punctuation.terminator",
                "support.constant",
                "support.variable",
                //"text",
                "variable.object",
                "variable.other.constant",
                "variable.other.object.property", // Necesario, no tiene mellizo.
                "variable.other.property",
                "variable.other.readwrite",
                "variable.parameter",
            ],
            "settings": {
                "foreground": "#001080" // #2B2D35
            }
        },
        {
            "scope": [
                "comment",
                "punctuation.definition.comment",
            ],
            "settings": {
                "foreground": "#6A6A6A" // ???
            }
        },
        {
            "scope": [
                "constant.language",
                "constant.numeric",
                "constant.other.caps",
                "constant.other.character-class",
                "entity.name.type",
                "entity.other.attribute-name",
                "markup.bold",
                "punctuation.decorator",
                "punctuation.definition.bold",
                "punctuation.definition.constant",
            ],
            "settings": {
                "foreground": "#795E26" // #E05500
            }
        },
        {
            "scope": [
                "keyword.control",
                "keyword.generator",
                "keyword.operator.arrow",
                "keyword.operator.expression",
                "keyword.operator.new",
                "keyword.other", // Necesario, sin más especialización conocida.
                "keyword.other.directive",
                "keyword.other.DDL",
                "keyword.other.DML",
                "keyword.preprocessor",
                "keyword.type",
                "markup.italic",
                "punctuation.definition.italic",
                "storage",
            ],
            "settings": {
                "foreground": "#AF00DB" // #9020C0
            }
        },
        {
            "scope": [
                "constant.other.database-name",

                "keyword.other.definition",
                "support.type.property-name", // *                
                "variable.language",
                "variable.other.enummember",
                "variable.other.object", // Necesario, sin más especializaciones.
                "variable.other.razor",
                "variable.other.regexp",
            ],
            "settings": {
                "foreground": "#DC322F" // #D02040
            }
        },
    ],
    
}
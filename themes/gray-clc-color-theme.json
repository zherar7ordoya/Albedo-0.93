{
    "name": "Gray CLC",
    "type": "light",
    "semanticHighlighting": true,
    //
    // -------------------------------------------------------------------------
    //
    "tokenColors": [
        //
        // Itálico, negrita y subrayado
        //
        {
            "scope": "markup.underline",
            "settings": {
                "fontStyle": "underline"
            }
        },
        {
            "scope": [
                "markup.italic",
                "variable.parameter"
            ],
            "settings": {
                "fontStyle": "italic"
            }
        },
        {
            "scope": [
                "entity.name.section",
                "keyword.other.important",
                "markup.bold",
            ],
            "settings": {
                "fontStyle": "bold"
            }
        },
        //
        // Gris tenue
        //
        {
            "scope": [
                "comment",
                "punctuation.definition.comment",
                "comment.block.preprocessor",
                "comment.documentation",
                "comment.block.documentation",
            ],
            "settings": {
                //"foreground": "#008000"
                "foreground": "#777777",
                "fontStyle": "italic"
            }
        },
        //
        // Rojo sangre
        //
        {
            "scope": [
                "invalid.illegal",
                "entity.name.exception",
                "markup.error",
                "markup.traceback",
            ],
            "settings": {
                "foreground": "#660000"
            }
        },
        //
        // Negro suave
        //
        {
            "scope": "keyword.operator",
            "settings": {
                "foreground": "#333333"
            }
        },
        //
        // Azul clásico profundo
        //
        {
            "scope": [
                "keyword",
                "storage",
                "meta.tag",
                "punctuation.definition.tag.html",
                "punctuation.definition.tag.begin.html",
                "punctuation.definition.tag.end.html",
                "entity.name.tag",
                "meta.property-name",
                "support.type.property-name",
                "meta.link",
                "markup.list",
            ],
            "settings": {
                "foreground": "#0033CC"
            }
        },
        //
        // Cian oscuro
        //
        {
            "scope": [
                "storage.type",
                "support.type",
                "entity.name.type",
                "entity.name.namespace",
                "entity.other.inherited-class",
                "support.class",
            ],
            "settings": {
                //"foreground": "#007755"
                "foreground": "#006666"
            }
        },
        //
        //
        //
        {
            "scope": [
                "constant.language",
                "support.constant",
                "variable.language"
            ],
            "settings": {
                "foreground": "#000099",
                "fontStyle": "underline"
            }
        },
        //
        //
        //
        {
            "scope": [
                "variable",
                "support.variable"
            ],
            "settings": {
                "foreground": "#112266"
            }
        },
        //
        //
        //
        {
            "scope": [
                "constant",
                "variable.other.constant",
                "variable.other.enummember"
            ],
            "settings": {
                "foreground": "#0066cc"
            }
        },
        //
        //
        //
        {
            "scope": [
                "entity.name.function",
                "support.function",
                "constant.character.escape",
            ],
            "settings": {
                "foreground": "#996600"
            }
        },
        //
        //
        //
        {
            "scope": [
                "constant.numeric",
                "constant.character",
                "constant",
                "punctuation",
            ],
            "settings": {
                "foreground": "#000066"
            }
        },
        //
        //
        //
        {
            "scope": [
                "string",
                "punctuation.definition.string"
            ],
            "settings": {
                "foreground": "#993300"
            }
        },
        //
        //
        //
        {
            "scope": "string.regexp",
            "settings": {
                "foreground": "#666600"
            }
        },
        //
        //
        //
        {
            "scope": "constant.other.symbol",
            "settings": {
                "foreground": "#cc6600"
            }
        },
        //
        //
        //
        {
            "scope": [
                "meta.tag.sgml.doctype",
                "meta.tag.sgml.doctype string",
                "meta.tag.sgml.doctype entity.name.tag",
                "meta.tag.sgml punctuation.definition.tag.html"
            ],
            "settings": {
                "foreground": "#AAAAAA"
            }
        },
        //
        //
        //
        {
            "scope": [
                "meta.tag entity.other.attribute-name",
                "entity.other.attribute-name.html"
            ],
            "settings": {
                "foreground": "#006666"
            }
        },
        //
        //
        //
        {
            "scope": [
                "constant.character.entity",
                "punctuation.definition.entity",
                "markup.inline.raw",
            ],
            "settings": {
                "foreground": "#AB6526"
            }
        },
        //
        //
        //
        {
            "scope": [
                "meta.selector",
                "meta.selector entity",
                "meta.selector entity punctuation",
                "entity.name.tag.css",
                "markup.quote",
            ],
            "settings": {
                "foreground": "#7A3E9D"
            }
        },
        //
        //
        //
        {
            "scope": [
                "meta.property-value",
                "meta.property-value constant.other",
                "support.constant.property-value",
                "markup.bold",
                "markup.italic",
            ],
            "settings": {
                "foreground": "#448C27"
            }
        },
        //
        //
        //
        {
            "scope": [
                "markup.changed",
                "markup.deleted",
                "markup.inserted",
            ],
            "settings": {
                "foreground": "#000000"
            }
        },
        //
        //
        //
        {
            "scope": [
                "markup.output",
                "markup.raw",
                "markup.prompt",
            ],
            "settings": {
                "foreground": "#777777"
            }
        },
        //
        //
        //
        {
            "scope": "markup.heading",
            "settings": {
                "foreground": "#AA3731"
            }
        },
        //
        //
        //
        {
            "scope": [
                "meta.diff.range",
                "meta.diff.index",
                "meta.separator",
                "meta.diff.header.from-file",
                "meta.diff.header.to-file",
            ],
            "settings": {
                "foreground": "#434343"
            }
        },
    ],
    //
    // -------------------------------------------------------------------------
    //












@model MyApp.Models.Person

@{
    ViewData["Title"] = "Detalle de Persona";
    var edadActual = DateTime.Now.Year - Model.BirthYear;
}

<h1>Información personal</h1>

<p>Nombre: <strong>@Model.FullName</strong></p>
<p>Edad aproximada: <em>@edadActual</em> años</p>

@if (edadActual >= 18)
{
    <p><span style="color:green">Es mayor de edad.</span></p>
}
else
{
    <p><span style="color:orange">Es menor de edad.</span></p>
}

@functions {
    private int CalcularEdad(DateTime nacimiento)
    {
        return DateTime.Now.Year - nacimiento.Year;
    }
}

@section Scripts {
    <script>
        console.log("Página cargada para " + @Model.FullName");
    </script>
}

{
    "name": "A Warm Place",
    // =================================
    "type": "light",
    // =================================
    "semanticHighlighting": false,
    // =================================
    "semanticTokenColors": {
        //
        /* Unused tokens ------------ */
        "decorator": "#7d663c",
        "modifier": "#7d663c",
        "regexp": "#7d663c",
        /* -------------------------- */
        //
        "xmlDocCommentAttributeQuotes": "#7d663c",
        //
        "extensionMethod": "#3767d0",
        "function": "#3767d0",
        "method": "#3767d0",
        //
        "markupAttributeValue": "#187c18",
        "preprocessorText": "#187c18",
        "string": "#187c18",
        "stringVerbatim": "#187c18",
        //
        "constant": "#303030",
        "event": "#303030",
        "field": "#303030",
        "label": "#303030",
        "macro": "#303030",
        "operator": "#303030",
        "punctuation": "#303030",
        "variable": "#303030",
        //
        "comment": "#6b6b6b",
        "xmlDocCommentDelimiter": "#6b6b6b",
        "xmlDocCommentText": "#6b6b6b",
        //
        "class": "#8e6101",
        "delegate": "#8e6101",
        "enum": "#8e6101",
        "interface": "#8e6101",
        "markupAttribute": "#8e6101",
        "namespace": "#8e6101",
        "number": "#8e6101",
        "recordClass": "#8e6101",
        "recordStruct": "#8e6101",
        "struct": "#8e6101",
        "type": "#8e6101",
        "typeParameter": "#8e6101",
        "xmlDocCommentAttributeName": "#8e6101",
        //      
        "controlKeyword": "#b72ab5",
        "keyword": "#b72ab5",
        //
        "enumMember": "#c82626",
        "markupElement": "#c82626",
        "parameter": "#c82626",
        "property": "#c82626",
        "xmlDocCommentName": "#c82626",
        //
    },
    // =================================
    "colors": {
        //
        // === Base ===
        "focusBorder": "#eeeeee00",
        "foreground": "#167474",
        "editor.background": "#eeeeee",
        "editor.foreground": "#167474",
        //
        // === Editor ===
        "editor.lineHighlightBackground": "#f5f5dd", // más suave que #f0ecd0
        "editor.lineHighlightBorder": "#f5f5dd",
        "editor.selectionBackground": "#fed442", // bien definido, no tocar
        "editorLineNumber.foreground": "#babbbc",
        "editorLineNumber.activeForeground": "#303030", // tono "negro" del tema
        //
        "editorSuggestWidget.highlightForeground": "#c82626", // coincide con token rojo
        "editorSuggestWidget.selectedBackground": "#e1e1e1",
        "editorWidget.background": "#eeeeee",
        "editorWidget.border": "#b2b2b2", // más suave que #167474
        //
        // === Input y Dropdown ===
        "input.background": "#eeeeee",
        "input.border": "#b2b2b2",
        "inputOption.activeBorder": "#303030",
        "inputOption.activeForeground": "#167474",
        "dropdown.background": "#eeeeee",
        "dropdown.border": "#b2b2b2",
        "dropdown.listBackground": "#eeeeee",
        //
        // === Botones ===
        "button.background": "#c82626", // token rojo
        "button.foreground": "#eeeeee",
        //
        // === Lists ===
        "list.activeSelectionBackground": "#dfdfdf",
        "list.activeSelectionForeground": "#c82626", // rojo tokens
        "list.focusBackground": "#dfdfdf",
        "list.focusForeground": "#c82626",
        "list.hoverBackground": "#dfdfdf",
        "list.hoverForeground": "#c82626",
        "list.inactiveSelectionBackground": "#dfdfdf",
        "list.inactiveSelectionForeground": "#c82626",
        "list.highlightForeground": "#c82626",
        //
        // === Tabs y Panel ===
        "tab.activeBackground": "#eeeeee",
        "tab.activeBorder": "#8e6101", // naranja tokens
        "tab.border": "#eeeeee",
        "tab.inactiveBackground": "#eeeeee",
        "panel.border": "#8e6101",
        //
        // === Activity Bar ===
        "activityBar.background": "#eeeeee",
        "activityBar.border": "#eeeeee",
        "activityBar.foreground": "#167474",
        "activityBarBadge.background": "#c82626",
        //
        // === Side Bar ===
        "sideBar.background": "#eeeeee",
        "sideBar.border": "#eeeeee",
        "sideBar.foreground": "#167474",
        "sideBarSectionHeader.background": "#eeeeee",
        //
        // === Status Bar ===
        "statusBar.background": "#eeeeee",
        "statusBar.border": "#eeeeee",
        "statusBar.foreground": "#167474",
        "statusBar.debuggingBackground": "#eeeeee",
        "statusBar.debuggingForeground": "#167474",
        "statusBar.noFolderBackground": "#eeeeee",
        "statusBar.noFolderForeground": "#167474",
        //
        // === Title Bar ===
        "titleBar.activeBackground": "#eeeeee",
        "titleBar.activeForeground": "#167474",
        "titleBar.inactiveBackground": "#eeeeee",
        "titleBar.inactiveForeground": "#167474",
        "titleBar.border": "#eeeeee",
        //
        // === Notificaciones ===
        "notificationCenter.border": "#eeeeee",
        "notificationCenterHeader.background": "#eeeeee",
        "notificationToast.border": "#eeeeee",
        "notifications.background": "#eeeeee",
        "notifications.border": "#eeeeee",
        //
        // === Grupos de editor ===
        "editorGroup.border": "#eeeeee",
        "editorGroupHeader.noTabsBackground": "#eeeeee",
        "editorGroupHeader.tabsBackground": "#eeeeee",
        "editorGroupHeader.tabsBorder": "#eeeeee",
        //
        // === Scrollbar y sombreado ===
        "scrollbar.shadow": "#eeeeee"
    },
    // =================================
    "tokenColors": [
        //
        // Red.-------------------------
        {
            "scope": [
                "constant.other.database-name",
                "entity.name.tag",
                "keyword.other.definition",
                "punctuation.definition.template-expression",
                "support.type.property-name",
                "support.variable",
                "variable.language",
                "variable.other.enummember",
                "variable.other.property",
                "variable.other.razor",
                "variable.other.regexp",
            ],
            "settings": {
                "foreground": "#c82626"
            }
        },
        //
        // Blue.------------------------
        {
            "scope": [
                "constant.other.color",
                "entity.name.function",
                "entity.name.section",
                "keyword.operator.decrement",
                "keyword.operator.expression.keyof",
                "keyword.operator.expression.typeof",
                "keyword.operator.increment",
                "keyword.operator.relational",
                "punctuation.definition.entity",
                "punctuation.definition.group",
                "punctuation.definition.heading",
                "punctuation.definition.interpolation",
                "support.function",
                "support.type.builtin",
                "support.type.primitive",
                "support.type.python",
            ],
            "settings": {
                "foreground": "#3767d0"
            }
        },
        //
        // Green.-----------------------
        {
            "scope": [
                "entity.name.type.module",
                "punctuation.definition.string",
                "string.quoted",
                "string.template",
                "string.unquoted",
            ],
            "settings": {
                "foreground": "#187c18"
            }
        },
        //
        // Orange.----------------------
        {
            "scope": [
                "constant.language",
                "constant.numeric",
                "constant.other.caps",
                "constant.other.character-class",
                "entity.name.type",
                "entity.other.attribute-name",
                "entity.other.inherited-class",
                "keyword.other.unit",
                "markup.bold",
                "punctuation.decorator",
                "punctuation.definition.bold",
                "punctuation.definition.constant",
            ],
            "settings": {
                "foreground": "#8e6101"
            }
        },
        //
        // Purple.----------------------
        {
            "scope": [
                "keyword.control",
                "keyword.generator",
                "keyword.operator.arrow",
                "keyword.operator.expression.in",
                "keyword.operator.expression.is",
                "keyword.operator.new",
                "keyword.other",
                "keyword.other.directive",
                "keyword.other.DDL",
                "keyword.other.DML",
                "keyword.preprocessor",
                "keyword.type",
                "markup.italic",
                "punctuation.definition.italic",
                "storage",
            ],
            "settings": {
                "foreground": "#b72ab5"
            }
        },
        //
        // Black.-----------------------
        {
            "scope": [
                "constant.other.table-name",
                "entity.name.variable",
                "keyword.operator.arithmetic",
                "keyword.operator.assignment",
                "keyword.operator.comparison",
                "keyword.operator.quantifier",
                "keyword.operator.rest",
                "keyword.operator.spread",
                "keyword.operator.type",
                "meta.attribute",
                "meta.brace",
                "meta.function-call",
                "meta.function.parameters",
                "meta.object-literal",
                "punctuation.accessor",
                "punctuation.curlybrace",
                "punctuation.definition.array",
                "punctuation.definition.block",
                "punctuation.definition.dictionary",
                "punctuation.definition.inheritance",
                "punctuation.definition.parameters",
                "punctuation.definition.tag",
                "punctuation.definition.typeparameters",
                "punctuation.parenthesis",
                "punctuation.section",
                "punctuation.separator",
                "punctuation.squarebracket",
                "punctuation.terminator",
                "support.constant",
                "variable.object",
                "variable.other.constant",
                "variable.other.object",
                "variable.other.object.property",
                "variable.other.readwrite",
                "variable.parameter",
            ],
            "settings": {
                "foreground": "#303030"
            }
        },
        // Gray.------------------------
        {
            "scope": [
                "comment",
                "punctuation.definition.comment",
            ],
            "settings": {
                "foreground": "#6b6b6b"
            }
        },
        // Styles.----------------------
        {
            "scope": [
                "keyword.operator.relational",
                "keyword.operator.arithmetic",
                "punctuation.separator",
            ],
            "settings": {
                "fontStyle": "",
            }
        },
        {
            "scope": [
                "entity.name.variable",
                "meta.object-literal",
                "variable.object.property",
                "variable.other.constant",
                "variable.other.readwrite",
                "variable.parameter",
            ],
            "settings": {
                "fontStyle": "italic"
            }
        },
    ],
}
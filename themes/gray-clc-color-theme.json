{
    "name": "A Warm Place",
    // =================================
    "type": "light",
    // =================================
    "semanticHighlighting": false,
    // =================================
    "semanticTokenColors": {
        //
        /* Unused tokens ------------ */
        "decorator": "#000000",
        "modifier": "#000000",
        "regexp": "#000000",
        /* -------------------------- */
        //
        "xmlDocCommentAttributeQuotes": "#005661",
        //
        "extensionMethod": "#3377CC",
        "function": "#3377CC",
        "method": "#3377CC",
        //
        "markupAttributeValue": "#006B1E",
        "preprocessorText": "#006B1E",
        "string": "#006B1E",
        "stringVerbatim": "#006B1E",
        //
        "constant": "#2B2D35",
        "event": "#2B2D35",
        "field": "#2B2D35",
        "label": "#2B2D35",
        "macro": "#2B2D35",
        "operator": "#2B2D35",
        "punctuation": "#2B2D35",
        "variable": "#2B2D35",
        //
        "comment": "#6A6A6A",
        "xmlDocCommentDelimiter": "#6A6A6A",
        "xmlDocCommentText": "#6A6A6A",
        //
        "class": "#8B5A00",
        "delegate": "#8B5A00",
        "enum": "#8B5A00",
        "interface": "#8B5A00",
        "markupAttribute": "#8B5A00",
        "namespace": "#8B5A00",
        "number": "#8B5A00",
        "recordClass": "#8B5A00",
        "recordStruct": "#8B5A00",
        "struct": "#8B5A00",
        "type": "#8B5A00",
        "typeParameter": "#8B5A00",
        "xmlDocCommentAttributeName": "#8B5A00",
        //      
        "controlKeyword": "#A626A4",
        "keyword": "#A626A4",
        //
        "enumMember": "#D02040",
        "markupElement": "#D02040",
        "parameter": "#D02040",
        "property": "#D02040",
        "xmlDocCommentName": "#D02040",
        //
    },
    // =================================
    "colors": {
        // === BASE ARMONIZADA ===
        "focusBorder": "#3377CC80",
        "foreground": "#2B2D35",
        "editor.background": "#F9F0DF",
        "editor.foreground": "#005661",
        "scrollbar.shadow": "#EDE5D8",
        // === BARRAS UNIFICADAS (TOP & BOTTOM) ===
        "titleBar.activeBackground": "#f0f0f0",
        "titleBar.activeForeground": "#000000",
        "titleBar.inactiveBackground": "#f0f0f0",
        "titleBar.inactiveForeground": "#666666",
        "titleBar.border": "#e0e0e0",
        "statusBar.background": "#f0f0f0",
        "statusBar.foreground": "#000000",
        "statusBar.border": "#e0e0e0",
        "statusBar.noFolderBackground": "#f0f0f0",
        "statusBar.noFolderForeground": "#000000",
        "statusBar.debuggingBackground": "#f0f0f0",
        "statusBar.debuggingForeground": "#000000",
        // === ACTIVITY BAR ===
        "activityBar.border": "#EDE5D8",
        "activityBar.background": "#F8F2E5",
        "activityBar.foreground": "#2B2D35",
        "activityBarBadge.background": "#A626A4",
        "activityBarBadge.foreground": "#FFFFFF",
        // === GRUPOS DE EDITOR ===
        "editorGroup.border": "#EDE5D8",
        "editorGroupHeader.tabsBackground": "#F8F2E5",
        "editorGroupHeader.noTabsBackground": "#F8F2E5",
        "editorGroupHeader.tabsBorder": "#EDE5D8",
        "tab.activeBackground": "#F9F0DF", // Igual al editor
        "tab.inactiveBackground": "#F8F2E5",
        "tab.border": "#EDE5D8",
        "tab.activeBorder": "#3377CC",
        "tab.activeForeground": "#000000",
        "tab.inactiveForeground": "#666666",
        "tab.hoverBackground": "#F8F2E5",
        // === BARRA LATERAL ===
        "sideBar.border": "#EDE5D8",
        "sideBar.background": "#F8F2E5",
        "sideBar.foreground": "#2B2D35",
        "sideBarSectionHeader.background": "#F8F2E5",
        "sideBarSectionHeader.foreground": "#2B2D35",
        "sideBarTitle.foreground": "#2B2D35",
        // === LISTAS ===
        "list.highlightForeground": "#3377CC",
        "list.activeSelectionBackground": "#e8e8e8",
        "list.activeSelectionForeground": "#000000",
        "list.inactiveSelectionBackground": "#f0f0f0",
        "list.inactiveSelectionForeground": "#666666",
        "list.hoverBackground": "#F8F2E5",
        "list.hoverForeground": "#000000",
        "list.focusBackground": "#e8e8e8",
        "list.focusForeground": "#000000",
        // === EDITOR ===
        "editor.lineHighlightBackground": "#F8F2E5",
        "editor.lineHighlightBorder": "#00000000",
        "editorLineNumber.foreground": "#8B5A00",
        "editorLineNumber.activeForeground": "#000000",
        "editor.selectionBackground": "#3377CC40",
        "editor.selectionHighlightBackground": "#3377CC20",
        "editor.findMatchBackground": "#3377CC40",
        "editor.findMatchHighlightBackground": "#3377CC20",
        // === INPUTS ===
        "input.border": "#D4CBBE",
        "input.background": "#F8F2E5",
        "input.foreground": "#2B2D35",
        "input.placeholderForeground": "#888888",
        "inputOption.activeBorder": "#3377CC",
        "inputOption.activeForeground": "#000000",
        "dropdown.border": "#D4CBBE",
        "dropdown.background": "#F8F2E5",
        "dropdown.listBackground": "#F8F2E5",
        // === NOTIFICACIONES ===
        "notificationCenter.border": "#EDE5D8",
        "notificationCenterHeader.background": "#F8F2E5",
        "notificationToast.border": "#EDE5D8",
        "notifications.background": "#F8F2E5",
        "notifications.border": "#EDE5D8",
        "notificationsInfoIcon.foreground": "#3377CC",
        "notificationsWarningIcon.foreground": "#8B5A00",
        "notificationsErrorIcon.foreground": "#D03030", // Rojo ya optimizado
        // === BOTONES ===
        "button.background": "#3377CC",
        "button.foreground": "#FFFFFF",
        "button.hoverBackground": "#005661",
        "button.border": "#00000000",
        "button.secondaryBackground": "#8B5A00",
        "button.secondaryForeground": "#FFFFFF",
        "button.secondaryHoverBackground": "#7A4A00",
        // === WIDGETS DEL EDITOR ===
        "editorWidget.background": "#F8F2E5",
        "editorWidget.border": "#D4CBBE",
        "editorSuggestWidget.background": "#F8F2E5",
        "editorSuggestWidget.foreground": "#2B2D35",
        "editorSuggestWidget.selectedBackground": "#e8e8e8",
        "editorSuggestWidget.highlightForeground": "#3377CC",
        "editorHoverWidget.background": "#F8F2E5",
        "editorHoverWidget.foreground": "#2B2D35",
        "editorHoverWidget.border": "#D4CBBE",
        // === PANEL ===
        "panel.border": "#EDE5D8",
        "panel.background": "#F8F2E5",
        "panelTitle.activeBorder": "#3377CC",
        "panelTitle.activeForeground": "#000000",
        "panelTitle.inactiveForeground": "#666666",
        // === SCROLLBARS ===
        "scrollbarSlider.background": "#00000020",
        "scrollbarSlider.hoverBackground": "#00000030",
        "scrollbarSlider.activeBackground": "#00000040",
        // === MENÃšS ===
        "menu.background": "#F8F2E5",
        "menu.foreground": "#2B2D35",
        "menu.selectionBackground": "#e8e8e8",
        "menu.selectionForeground": "#000000",
        "menu.border": "#D4CBBE"
    },
    // =================================
    "tokenColors": [
        {
            "scope": [
                "entity.name.function",
                "keyword.operator.arithmetic",
                "keyword.operator.relational",
                "punctuation.definition.group",
                "punctuation.definition.interpolation",
                "punctuation.definition.string",
                "punctuation.definition.template-expression",
                "support.function",
                "support.type.builtin",
                "support.type.primitive",
            ],
            "settings": {
                "foreground": "#3377CC"
            }
        },
        {
            "scope": [
                "entity.other",
                "string.quoted",
                "string.template",
            ],
            "settings": {
                "foreground": "#006B1E"
            }
        },
        {
            "scope": [
                "entity.name.variable",
                "keyword.operator.quantifier",
                "meta.brace",
                "punctuation.curlybrace",
                "punctuation.definition.block",
                "punctuation.definition.parameters",
                "punctuation.definition.tag",
                "punctuation.definition.typeparameters",
                "punctuation.parenthesis",
                "punctuation.section",
                "punctuation.squarebracket",
                "punctuation.terminator",
                "source.python",
                "source.sql",
                "support.constant",
                "support.variable",
                "variable.object",
                "variable.other.constant",
                "variable.other.object.property",
                "variable.other.property",
                "variable.other.readwrite",
            ],
            "settings": {
                "foreground": "#2B2D35"
            }
        },
        {
            "scope": [
                "comment",
                "punctuation.definition.comment",
            ],
            "settings": {
                "foreground": "#6A6A6A"
            }
        },
        {
            "scope": [
                "constant",
                "entity.name.type",
                "keyword.other",
                "punctuation.decorator",
                "punctuation.definition.constant",
                "variable.parameter",
            ],
            "settings": {
                "foreground": "#8B5A00"
            }
        },
        {
            "scope": [
                "keyword.control",
                "keyword.generator",
                "keyword.operator.new",
                "keyword.type",
                "storage",
            ],
            "settings": {
                "foreground": "#A626A4"
            }
        },
        {
            "scope": [
                "entity.name.tag",
                "support.type.property-name",
                "variable.language",
                "variable.other.enummember",
                "variable.other.object",
                "variable.other.razor",
                "variable.other.regexp",
            ],
            "settings": {
                "foreground": "#D02040"
            }
        },
    ],
}











# top-most EditorConfig file
root = true

# Global settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python specific settings
[*.py]
indent_style = space
indent_size = 4
max_line_length = 80

# JavaScript and JSON specific settings
[*.{js,json}]
indent_style = space
indent_size = 2

# Markdown specific settings
[*.md]
indent_style = space
indent_size = 4